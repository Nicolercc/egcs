---
const features = [
  {
    icon: `<svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
    title: "Certified Professionals",
    description: "Our team consists of certified lead abatement professionals with years of experience.",
  },
  {
    icon: `<svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
    title: "Quick Response",
    description: "24/7 emergency services available for urgent lead abatement needs.",
  },
];
---

<section class="grid sm:grid-cols-2 gap-6">
  {
    features.map((feature) => (
      <div class="bg-white rounded-lg shadow-lg p-6">
        <div class="flex items-center gap-4" set:html={feature.icon} />
        <h3 class="text-xl font-semibold">{feature.title}</h3>
        <p class="text-gray-600 mt-4">{feature.description}</p>
      </div>
    ))
  }
</section>