---
const currentYear = new Date().getFullYear();

const services = [
    { name: "Project Management", url: "/services/project-management" },
    { name: "Asbestos Management", url: "/services/asbestos-management" },
    { name: "Cleaning Services", url: "/services/cleaning" },
];

const companyLinks = [
    { name: "About Us", url: "/about" },
    { name: "Contact", url: "/contact" },
    { name: "Get a Quote", url: "/quote" },
];

const socialLinks = [
    { name: "Facebook", url: "#", icon: "fab fa-facebook-f" },
    { name: "Twitter", url: "#", icon: "fab fa-twitter" },
    { name: "LinkedIn", url: "#", icon: "fab fa-linkedin-in" },
];
---

<footer class="bg-gray-800 text-white pt-12 pb-8">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <div class="mb-8 md:mb-0">
                <h3 class="text-xl font-bold mb-4">Company Name</h3>
                <p class="text-gray-400">Providing expert project management and services to empower your business.</p>
            </div>
            <div>
                <h4 class="text-lg font-semibold mb-4">Services</h4>
                <ul class="space-y-2">
                    {services.map(service => (
                        <li><a href={service.url} class="text-gray-400 hover:text-white transition-colors">{service.name}</a></li>
                    ))}
                </ul>
            </div>
            <div>
                <h4 class="text-lg font-semibold mb-4">Company</h4>
                <ul class="space-y-2">
                    {companyLinks.map(link => (
                        <li><a href={link.url} class="text-gray-400 hover:text-white transition-colors">{link.name}</a></li>
                    ))}
                </ul>
            </div>
            <div>
                <h4 class="text-lg font-semibold mb-4">Connect With Us</h4>
                <div class="flex space-x-4">
                    {socialLinks.map(link => (
                        <a href={link.url} class="text-gray-400 hover:text-white transition-colors" aria-label={link.name}>
                            <i class={link.icon}></i>
                        </a>
                    ))}
                </div>
            </div>
        </div>
        <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
            <p>&copy; {currentYear} Company Name. All rights reserved.</p>
        </div>
    </div>
</footer>

