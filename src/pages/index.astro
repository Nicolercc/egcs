---
import Navbar from "../components/Navbar.astro";
import RelatedProjects from "../components/relatedprojects.astro";
import BaseLayout from '../layouts/baselayout.astro'
import ContactSection from '../components/ContactSection.astro';

const services = [
 
{ title: 'Cleaning Services', img:'/src/assets/cleaning.jpg' , link:'/services/cleaning-services'},
{ title: 'Asbestos Abatement' , img:'/src/assets/Asbestos-abatement.jpg', link:'/services/asbestos-management'},
{ title: 'Mold Remediation', img:'/src/assets/mold.jpg', link:'/services/mold-remediation'  },
{ title: 'Lead Abatement', img:'/src/assets/lead-paint-removal.jpg', link:'/services/lead-abatement' },
 
];

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Our Business Services</title>
		<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
	</head>
	<BaseLayout class="bg-gray-100">
	
	
	
		<section class="relative h-screen flex items-center justify-center text-center text-white">
			<div class="absolute inset-0 bg-black z-10" style="opacity: 0.5;"></div>
			<div class="absolute inset-0 bg-cover bg-center w-100" style="background-image: url('/src/assets/landing.jpg');"></div>
			<div class="relative z-10 max-w-3xl mx-auto px-4">
				<h2 class="text-4xl font-bold mb-4 text-gray-300">Welcome to </h2>
				<h1 class="text-5xl font-bold mb-4 text-gray-200">Elite Global Cleaning Services</h1>
				<p class="text-xl mb-8 text-gray-300">Complete environmental solutions—from asbestos abatement to professional cleaning — done right for a safer, healthier environment in the Tristate area.</p>
				
				<div class="text-center mt-4">
					<a class="inline-block bg-yellow-500 hover:bg-yellow-600 text-white px-6 py-3 rounded-lg transition duration-300" href="/quote">Call Us Today</a>
				</div>
			</div>
		</section>

		
		<div class="ctr py-16 px-8 md:px-16 lg:px-32">
			<div class="flex flex-col md:flex-row ">
		
				<div class="w-full m">
					<h2 class="text-4xl font-bold mb-6 text-center">EGCS is Family Owned &amp; Operated</h2>
					
					<p class="text-lg text-gray-700 mb-6">
						We offer <b>immediate solutions</b>. We have specialized, certified, and highly experienced personnel to carry out the work. 
						If you are concerned about whether your property, home, or workplace may be contaminated with <b>mold, lead, or asbestos</b>, 
						or if you need a continuous <b>cleaning system</b>. We are here for you; <b>call us</b> and we can help you immediately. It doesn't matter if it's a small 
						or large damage, because <b>our clients are important to us</b>.
					</p>
					
					
				</div>
				
			</div>
		
	
			<section class="pb-16 px-4 pt-10">
				<div class="max-w-6xl mx-auto">
				  <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">
					Services Provided
				  </h2>
				
				  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-y-12">
					{
					  services.map((service) => (
						<a 
						  href={service.link}
						  class="flex flex-col items-center group no-underline"
						>
						  {/* Image Container */}
						  <div class="relative w-40 h-40 rounded-full overflow-hidden shadow-lg">
							<img 
							  src={service.img} 
							  alt={service.title} 
							  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
							/>
							<div class="absolute inset-0 bg-black bg-opacity-0 transition-opacity duration-300 group-hover:opacity-100"></div>
						  </div>
						  {/* Title */}
						  <div class="mt-4 text-center text-gray-800 font-bold text-sm sm:text-base group-hover:underline">
							{service.title.toUpperCase()}
						  </div>
						</a>
					  ))
					}
				  </div>
				  
				</div>
			  </section>
			  
		<section class="bg-gray-50 p-0 m-0">

			<ContactSection
			title="Contact Our Team" 
			email="support@egcs.com" 
		/>
		</section>
					

	</BaseLayout>
</html>
