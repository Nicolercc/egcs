---
import BaseLayout from '../layouts/baselayout.astro';
---

<BaseLayout title="Contact Us">
    <div class="min-h-screen bg-gray-100 flex items-center">
        <div class="container mx-auto px-4 py-8">
            <div class="max-w-2xl mx-auto">
                <!-- Header Section -->
                <div class="text-center pt-20 pb-7">
                    <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4 font-display">
                        Get in Touch
                    </h1>
                    
                    <p class="text-lg text-gray-600 font-body">
                        We're here to help! Reach out to us through any of these channels:
                    </p>
                </div>
                
                <!-- Contact Methods -->
                <div class="space-y-8">
                    <!-- Phone Numbers -->
                    <div class="">
                        <a href="tel:+929-888-3848" 
                           class="flex items-center justify-center group p-4 rounded-lg transition-all duration-300 hover:bg-white"
                           aria-label="Call us at 929-888-3848">
                            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-orange-100 group-hover:bg-orange-200 transition-colors duration-300">
                                <svg xmlns="http://www.w3.org/2000/svg" 
                                     class="h-6 w-6 text-orange-600" 
                                     fill="none" 
                                     viewBox="0 0 24 24" 
                                     stroke="currentColor"
                                     aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                            </div>
                            <span class="ml-4 text-lg text-gray-700 group-hover:text-gray-900 transition-colors duration-300">
                                929-888-3848
                            </span>
                        </a>

                        <a href="tel:+1929-784-8804" 
                           class="flex items-center justify-center group p-4 rounded-lg transition-all duration-300 hover:bg-white"
                           aria-label="Call us at 929-784-8804">
                            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-orange-100 group-hover:bg-orange-200 transition-colors duration-300">
                                <svg xmlns="http://www.w3.org/2000/svg" 
                                     class="h-6 w-6 text-orange-600" 
                                     fill="none" 
                                     viewBox="0 0 24 24" 
                                     stroke="currentColor"
                                     aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                            </div>
                            <span class="ml-4 text-lg text-gray-700 group-hover:text-gray-900 transition-colors duration-300">
                                929-784-8804
                            </span>
                        </a>

                        <!-- Divider -->
                        <div class="h-px bg-gray-200 w-full my-6"></div>

                        <!-- Email -->
                        <a href="mailto:eliteglobalcs1.llc@gmail.com" 
                           class="flex items-center justify-center group p-4 rounded-lg transition-all duration-300 hover:bg-white"
                           aria-label="Email us at eliteglobalcs1.llc@gmail.com">
                            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-orange-100 group-hover:bg-orange-200 transition-colors duration-300">
                                <svg xmlns="http://www.w3.org/2000/svg" 
                                     class="h-6 w-6 text-orange-600" 
                                     fill="none" 
                                     viewBox="0 0 24 24" 
                                     stroke="currentColor"
                                     aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <span class="ml-4 text-lg text-gray-700 group-hover:text-gray-900 transition-colors duration-300 break-all md:break-normal">
                                eliteglobalcs1.llc@gmail.com
                            </span>
                        </a>
                    </div>
                </div>

                <!-- Info Sections -->
                <div class="mt-4 space-y-6 pb-7">
                    <!-- Response Time Notice -->
                    <div class="text-center py-6 bg-white rounded-lg">
                        <p class="text-gray-500 font-medium">
                            Average Response Time
                        </p>
                        <p class="text-gray-800 font-semibold text-lg mt-2">
                            Within 2 Hours
                        </p>
                    </div>

                    <!-- Emergency Service Notice -->
                    <div class="bg-orange-50 rounded-lg p-6 ">
                        <div class="flex items-center justify-center space-x-3 text-orange-700">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                            </svg>
                            <span class="font-medium text-lg">24/7 Emergency Service Available</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

    .font-display {
        font-family: 'Inter', sans-serif;
    }

    .font-body {
        font-family: 'Inter', sans-serif;
    }
</style>