---
import BaseLayout from '../layouts/baselayout.astro';
---
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Our Services</title>
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    </head>
    <BaseLayout title="Get a Quote" class="bg-gray-100">
        <div class="container mx-auto px-4 py-8 pt-20">
            <h1 class="text-4xl font-bold text-center mb-8 text-gray-800">Let Us Know About Your Home</h1>
            
            <form class="max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-md">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                    <div class="text-center md:text-right">
                        <input type="text" placeholder="First Name" class="p-4 border rounded-lg w-full" required>
                    </div>
                    <div class="text-center md:text-left">
                        <input type="text" placeholder="Last Name" class="p-4 border rounded-lg w-full" required>
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                    <div class="text-center md:text-right">
                        <input type="email" placeholder="Email" class="p-4 border rounded-lg w-full" required>
                    </div>
                    <div class="text-center md:text-left">
                        <input type="tel" placeholder="Phone" class="p-4 border rounded-lg w-full" required>
                    </div>
                </div>
                
                <div class="mb-6 text-center">
                    <p class="mb-2 font-semibold">How would you like us to contact you?</p>
                    <div class="flex justify-center items-center space-x-4">
                        <label class="flex items-center">
                            <input type="checkbox" name="contact_preference" value="phone" class="mr-2">
                            Phone
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" name="contact_preference" value="email" class="mr-2">
                            Email
                        </label>
                    </div>
                </div>
                
                <div class="mb-6">
                    <input type="text" placeholder="Address" class="p-4 border rounded-lg w-full mb-4" required>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <input type="text" placeholder="City" class="p-4 border rounded-lg w-full" required>
                        <input type="text" placeholder="State" class="p-4 border rounded-lg w-full" required>
                        <input type="text" placeholder="ZIP" class="p-4 border rounded-lg w-full" required>
                    </div>
                </div>
                
                <div class="mb-6 text-center">
                    <select class="p-4 border rounded-lg w-full md:w-2/3 mx-auto" required>
                        <option value="">Select Service Type</option>
                        <option value="project_management">Project Management</option>
                        <option value="asbestos_management">Asbestos Management</option>
                        <option value="cleaning_services">Cleaning Services</option>
                    </select>
                </div>
                
                <div class="mb-6">
                    <textarea placeholder="Additional details about your request" rows="4" class="p-4 border rounded-lg w-full"></textarea>
                </div>
                
                <div class="text-center">
                    <button type="submit" class="bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 transition duration-300 w-full md:w-auto">
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </BaseLayout>
    
    </html>