---
import BaseLayout from '../layouts/baselayout.astro';
---
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Contact Us</title>
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    </head>
    <BaseLayout title="Contact Us" class="bg-gray-100 min-h-screen flex flex-col py-8">
        <div class="flex-grow container mx-auto px-4 py-8 pt-20 flex items-center justify-center">
            <div class="max-w-4xl w-full bg-white p-8 rounded-lg shadow-md text-center mt-10">
                <h1 class="text-4xl font-bold mb-8 text-gray-800 space-y-6">Contact Us</h1>
                
                <p class="text-lg text-gray-700 mb-6">We'd love to hear from you! Reach out to us via phone or email:</p>
                
                <div class="space-y-6">
                    <!-- Phone Number -->
                    <div class="flex justify-center items-center space-x-4 ">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                        </svg>
                        <a href="tel:+19293544114" class="text-blue-600 hover:text-blue-700 text-xl">1 (929) 354-4114</a>
                    </div>

                    <!-- Email Address -->
                    <div class="flex justify-center items-center space-x-4 ">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                        <a href="mailto:eliteglobalcs1.llc@gmail.com" class="text-blue-600 hover:text-blue-700 text-xl">eliteglobalcs1.llc@gmail.com</a>
                    </div>
                </div>

                <p class="mt-8 text-gray-600 space-y-6">We'll get back to you as soon as possible!</p>
            </div>
        </div>

        <!-- Footer -->
        <footer class="bg-gray-800 text-white text-center py-9 mt-auto ">
            <p>&copy; 2024 Elite Global Cleaning Services. All rights reserved.</p>
        </footer>
    </BaseLayout>
</html>