---
import BaseLayout from '../../layouts/baselayout.astro';
import Sidebar from '../../components/sideBar.astro';
import FAQ from '../../components/FAQ.astro';
import WhyChooseUs from '../../components/WhyChooseUs.astro';
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="relative bg-gray-900 text-white">
    <div class="absolute inset-0 bg-black/60 z-10"></div>
    <!-- <img src="https://source.unsplash.com/1600x600/?asbestos" alt="Asbestos Abatement" class="absolute inset-0 w-full h-full object-cover" /> -->
    <div class="relative z-20 container mx-auto px-4 py-24">
      <div class="max-w-3xl">
        <!-- Badge -->
        <span class="inline-block bg-orange-500 text-white px-4 py-2 rounded-full mb-4">Professional Service</span>
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Asbestos Abatement Services</h1>
        <p class="text-lg md:text-xl text-gray-200 mb-8">
          Asbestos removal is the process of safely eliminating asbestos-containing materials in residential and commercial properties. All structures built before 1978 should be inspected to prevent potential health risks. Asbestos exposure can pose serious health risks, as its fibers can lead to long-term respiratory diseases. Our team is trained and certified to effectively identify and remove asbestos, ensuring a safer environment for you and your family.

        
        </p>
        <div class="flex flex-wrap gap-4">
          <!-- Primary Button -->
          <a href="/quote" class="bg-orange-500 hover:bg-orange-600 text-white px-8 py-3 rounded-lg font-semibold transition duration-300">
            Get a Free Quote
          </a>
          <!-- Outline Button -->
          <a href="tel:+19293544114" class="border border-white text-white px-8 py-3 rounded-lg hover:bg-white/10 transition duration-300 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Emergency Service
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-16">
    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Main Content Area -->
      <div class="lg:col-span-2 space-y-12">
        <!-- Process Overview -->
        <section>
          <h2 class="text-3xl font-bold mb-6">Our Asbestos Abatement Process</h2>
  <p class="text-gray-600 mb-8">
    Asbestos abatement involves identifying, managing, and eliminating asbestos hazards in buildings and facilities.  Our comprehensive approach ensures thorough removal while protecting occupants, workers, and the environment from hazardous exposure through the following methods:

  </p>

          <!-- Tabs -->
          <div class="tabs">
            <div class="grid grid-cols-2 lg:grid-cols-5 gap-2 mb-6">
              <button class="tab-button p-4 bg-gray-200 rounded-lg hover:bg-gray-300 transition duration-300" data-tab="removal">Removal</button>
              <button class="tab-button p-4 bg-gray-200 rounded-lg hover:bg-gray-300 transition duration-300" data-tab="encapsulation">Encapsulation</button>
              <button class="tab-button p-4 bg-gray-200 rounded-lg hover:bg-gray-300 transition duration-300" data-tab="enclosure">Enclosure</button>
              <!-- <button class="tab-button p-4 bg-gray-200 rounded-lg hover:bg-gray-300 transition duration-300" data-tab="removal">Removal</button> -->
              <button class="tab-button p-4 bg-gray-200 rounded-lg hover:bg-gray-300 transition duration-300" data-tab="replacement">Replacement</button>
              <button class="tab-button p-4 bg-gray-200 rounded-lg hover:bg-gray-300 transition duration-300" data-tab="remediation">Remediation</button>

            
            </div>

            <!-- Tab Content -->
            <div class="tab-contents">
              <!-- Removal -->
              <div class="tab-content bg-white rounded-lg shadow-lg p-6 hidden" id="removal">
                <div class="grid gap-6">
                  <div>
                    <h3 class="text-xl font-semibold mb-4">Asbestos Removal Process</h3>
                    <p class="text-gray-600 mb-4">
                      Complete removal of asbestos-containing materials from your property. Our certified professionals follow strict safety protocols to ensure thorough and safe removal of all hazardous materials.
                    </p>
                    <ul class="space-y-2">
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Setting up sealed work areas with negative air pressure systems to prevent asbestos fibers from spreading</span>
                      </li>
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Carefully dismantling and disposing of asbestos-containing materials using specialized equipment and protective gear</span>
                      </li>
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Conducting HEPA vacuuming, wet wiping, and air quality testing to ensure the area is asbestos-free before clearance.</span>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>

              <!-- Encapsulation -->
              <div class="tab-content bg-white rounded-lg shadow-lg p-6 hidden" id="encapsulation">
                <div class="grid gap-6">
                  <div>
                    <h3 class="text-xl font-semibold mb-4">Encapsulation Process</h3>
                    <p class="text-gray-600 mb-4">
                      Covering and sealing asbestos materials with a special coating. This is generally safer for workers than removing the materials and provides long-lasting protection.
                    </p>
                    <ul class="space-y-2">
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Applying a Sealant over the asbestos-containing material to bind fibers together and prevent them from becoming airborne</span>
                      </li>
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Reinforcing the Surface to strengthen the material and reduce deterioration over time</span>
                      </li>
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Regular inspections are conducted to ensure the encapsulated asbestos remains intact and does not pose a risk of exposure</span>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>

              <!-- Enclosure -->
              <div class="tab-content bg-white rounded-lg shadow-lg p-6 hidden" id="enclosure">
                <div class="grid gap-6">
                  <div>
                    <h3 class="text-xl font-semibold mb-4">Enclosure Process</h3>
                    <p class="text-gray-600 mb-4">
                      Constructing a sealed, airtight barrier around asbestos-containing materials to contain fibers and prevent exposure. This method is often used for pipes, ducts, and structural elements.
                    </p>
                    <ul class="space-y-2">
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Building a Protective Barrier </span>
                      </li>
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Sealing All Openings</span>
                      </li>
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Regular Inspection & Maintenance </span>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>

              <!-- Replacement -->
              <div class="tab-content bg-white rounded-lg shadow-lg p-6 hidden" id="replacement">
                <div class="grid gap-6">
                  <div>
                    <h3 class="text-xl font-semibold mb-4">Replacement Process</h3>
                    <p class="text-gray-600 mb-4">
                      Removing asbestos-containing materials (such as insulation, tiles, and siding) and replacing them with modern, safe alternatives. This is a permanent solution that completely eliminates the asbestos hazard.
                    </p>
                    <ul class="space-y-2">
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Completely removes asbestos hazards</span>
                      </li>
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Permanent solution</span>
                      </li>
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Improves property value</span>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>

              <!-- Remediation -->
              <div class="tab-content bg-white rounded-lg shadow-lg p-6 hidden" id="remediation">
                <div class="grid gap-6">
                  <div>
                    <h3 class="text-xl font-semibold mb-4">Remediation Process</h3>
                    <p class="text-gray-600 mb-4">
                      Minimizing the risk of asbestos exposure by reducing hazards through methods such as encapsulation, enclosure, or removal. This process may also involve air monitoring and regular inspections to ensure long-term safety.
                    </p>
                    <ul class="space-y-2">
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Risk Assessment & Planning </span>
                      </li>
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Containment & Control Measures</span>
                      </li>
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Removal or Stabilization </span>
                      </li>
                     
                      <li class="flex items-start gap-2">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Regular inspections help maintain long-term safety.</span>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

       <!-- why choose us -->
       <section class="grid sm:grid-cols-2  gap-6">
        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="flex items-center gap-4">
            <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="text-xl font-semibold">Certified Professionals</h3>
          </div>
          <p class="text-gray-600 mt-4">
             Our team is made up of NYS-DOL, SST, DEP & OSHA certified professionals with years of experience and medical certifications, ensuring top-notch expertise and safety
          </p>
        </div>
        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="flex items-center gap-4">
            <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="text-xl font-semibold">Quick Response</h3>
          </div>
          <p class="text-gray-600 mt-4">
            24/7 emergency services available for urgent lead abatement needs.
          </p>
        </div>
      </section>

   
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Contact Card -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h3 class="text-xl font-semibold mb-4">Request a Consultation</h3>
        <p class="text-gray-600 mb-6">
          Get a free assessment and quote for your asbestos abatement needs.
        </p>
        <div class="space-y-4">
          <a href="/quote" class="w-full bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg font-semibold text-center block">
            Schedule Consultation
          </a>
          <a href="tel:+19297848804" class="w-full border border-gray-300 text-gray-700 px-6 py-3 rounded-lg font-semibold text-center block flex items-center justify-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Call Us Now
          </a>
        </div>
      </div>

      <!-- Certifications -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h3 class="text-xl font-semibold mb-4">Our Certifications</h3>
        <div class="grid grid-cols-2 gap-4">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm">NYS-DOL Certified</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm"> DEP Certified</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm">State Licensed</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
            <span class="text-sm">5-Star Rated</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <span class="text-sm">SST, OSHA Compliant</span>
          </div>
        </div>
      </div>

      <!-- Emergency Services -->
  <div class="bg-white rounded-lg shadow-lg p-6">
    <h3 class="text-xl font-semibold mb-4">Emergency Services</h3>
    <p class="text-gray-600 mb-4">
      24/7 emergency response available for urgent situations.
    </p>
    <div class="flex items-center gap-2 text-orange-500 mb-4">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
      </svg>
      <a href="tel:+19297848804" class="text-yellow-600 hover:text-yellow-700 text-xl">1 929-784-8804</a>
    </div>
    <div class="flex items-center gap-2 text-gray-600">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <span class="text-sm">Available 24/7</span>
    </div>
    </div>
  </div>
  </div>
</main>

<script>
  import { handleTabClick } from "../../scripts/handleTabClick";

  document.addEventListener('DOMContentLoaded', () => {
    // Add click handlers to all tab buttons
    document.querySelectorAll(".tab-button").forEach((tabButton) => {
      tabButton.addEventListener("click", handleTabClick);
    });

    // Activate the first tab by default
    const firstTab = document.querySelector(".tab-button") as HTMLButtonElement;
    if (firstTab) {
      firstTab.click();
    }
  });
</script>
</BaseLayout>