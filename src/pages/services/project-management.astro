---
import BaseLayout from '../../layouts/baselayout.astro';
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Our Business Services</title>
		<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
	</head>
<BaseLayout>
    <div class="container mx-auto px-4 py-16">
        <h1 class="text-4xl font-bold mb-8">Project Management</h1>
        
        <div class="bg-white rounded-lg shadow-md p-8">
            <h2 class="text-2xl font-semibold mb-4">Our Project Management Services</h2>
            <p class="text-gray-700 mb-6">
                We offer comprehensive project management solutions to ensure your projects are delivered on time and within budget. Our experienced team handles:
            </p>
            <ul class="list-disc ml-6 mb-6 space-y-2">
                <li>Project planning and scheduling</li>
                <li>Resource allocation and management</li>
                <li>Risk assessment and mitigation</li>
                <li>Progress monitoring and reporting</li>
                <li>Stakeholder communication</li>
            </ul>
            
            <div class="mt-8">
                <a href="/contact" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition duration-300">
                    Contact Us for Project Management
                </a>
            </div>
        </div>
    </div>
</BaseLayout> 
<html />